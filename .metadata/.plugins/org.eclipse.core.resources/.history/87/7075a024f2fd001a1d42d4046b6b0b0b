public class RectangleTest {
	public static void main(String[] args) {
		int n = 7;
		int[][] list = new int[n][n];
		int maxX = n - 1;	// X轴最大坐标
		int maxY = n - 1;	// Y轴最大坐标
		int minX = 0;		// X轴最小坐标
		int minY = 0;		// Y轴最小坐标
		int count = 1;
		while(minX <= maxX) {
			for(int i = 0; i < maxY; i++) {
				list[minX][i] = count;
				count++;
			}
			minX++;
			for(int i = minX; i < maxX; i++) {
				
			}
			
		}
	}
}
